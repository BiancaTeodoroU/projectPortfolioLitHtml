mixin carrousel(props = {})
    -   
        let state = {
            items: props.items || []
        }

    .c-carrousel
        .c-carrousel__content(class="slide-content")
            .c-carrousel__arrow(class="c-carrousel__arrow-left c-carrousel--previous")
                include ./src/svg/arrow-left.svg
            .c-carrousel__arrow(class="c-carrousel__arrow-right c-carrousel--next")
                include ./src/svg/arrow-right.svg
            .c-carrousel__align(class="o-row")
                .c-carrousel--slider(class="o-col-4")
                    each item, index in state.items 
                        .c-carrousel__card(
                            class={'u-mr-32': index !== 0 && index !== (state.items.length - 1)}
                            class={'u-mr-32' : index === 0}
                        )
                            .c-carrousel__image-2
                                img(class="c-carrousel__image" src=`${item.imageUrl}` alt="")                         
                            .c-carrousel__card-content
                                span(class="u-fs-26 u-db u-mb-16")
                                    =item.name 
                                span(class="u-fs-16 u-db u-mb-24")
                                    =item.developmet
                                button(
                                    class="c-carrousel__card--button"
                                    onclick=`window.open('${item.githubLink}')`
                                )
                                    | Github
