mixin qualification(props = {})
    -
        let state = {
            id: props.id,
            items: props.items || []
        }

    .timeline(id=`timeline${state.id}`)&attributes(attributes)
        div.btn-group
            button.btn(type="button" data-action="expand") Abrir todos
            button.btn(type="button" data-action="collapse") Fechar todos
        .u-flex(class="u-align-center u-justify-center u-flex-wrap")
            .qualification
                each item, index in state.items
                    if item.titleContent
                        h1(class="u-color-white u-m-0 u-fs-24 u-mb-32 u-text-center") 
                            =item.titleContent
                    .timeline__item(class= index === state.items.length - 1 ? '' : 'u-mb-24')
                        .timeline__item-header
                            button(class="timeline__arrow" type="button" id=`item${item.id}` aria-labelledby=`item${item.id}-name` aria-expanded="false" aria-controls=`item${item.id}-ctrld` aria-haspopup="true" data-item=item.id)
                                .timeline__arrow-icon
                                    include ./src/svg/arrow-right.svg
                            span#item1-name.timeline__meta
                                time.timeline__date(class="u-color-white" datetime="1970-01-01") 
                                    =item.date
                                br
                                strong(class="timeline__title u-color-purple u-color-white") 
                                    =item.title
                        div.timeline__item-body(role="region" aria-labelledby=`item${item.id}` aria-hidden="true" id=`item${item.id}-ctrld`)
                            div.timeline__item-body-content
                                p.timeline__item-p(class="u-color-white u-m-0")
                                    !=item.description