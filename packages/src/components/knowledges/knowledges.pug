mixin knowledges(props = {})
    -       
        let state = {
            items: props.items || []
        }
    
    .c-knowledges 
        .c-knowledges--grid.u-justify-content-center
            each item in state.items
                .box.ps-rl.ovfl-hdd(class="u-flex u-justify-center")
                    .c-knowledges__icon(class="icon")
                        case item.icon 
                            when 'html'
                                include ./src/svg/html.svg
                            when 'css'
                                include ./src/svg/css.svg
                            when 'sass'
                                include ./src/svg/sass.svg
                            when 'javascript'
                                include ./src/svg/javascript.svg
                            when 'pug'
                                include ./src/svg/pug.svg
                            when 'github'
                                include ./src/svg/github.svg
                            when 'typescript'
                                include ./src/svg/typescript.svg  
                            when 'lit'
                                include ./src/svg/lit.svg
                            when 'cypress'
                                include ./src/svg/cypress.svg           
                    .content
                        h2(class="u-text-center u-mb-24")
                            =item.name
                        
                        span(class="u-fs-14 u-color-white u-db")
                            =item.description