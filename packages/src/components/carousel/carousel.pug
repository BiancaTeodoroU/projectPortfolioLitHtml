mixin carousel(props = {})
    -
        let state = {
            items: props.items || [],
            title: props.title
        }

    .c-carousel 
        each item in state.items
            .c-carousel__card(data-card=`${item.id}`)
                .c-carousel__detail
                    img(class="c-carousel__image u-mt-24 u-mb-24" src=`${item.imageUrl}` alt="")      
                    span(class="u-color-white u-fs-20 u-font-weight-700 u-db u-mb-16") 
                        =item.name
                    span(class="u-color-white u-fs-16 u-db u-mb-24 u-pl-40 u-pr-40 u-text-center") 
                        =item.development
